[mysqld]
# Binary logging for CDC
log_bin = mysql-bin
binlog_format = ROW
binlog_row_image = FULL
server_id = 1
expire_logs_days = 7

# GTID for consistent replication
gtid_mode = ON
enforce_gtid_consistency = ON

# Binlog retention
binlog_expire_logs_seconds = 604800

# Performance
max_binlog_size = 100M
sync_binlog = 1